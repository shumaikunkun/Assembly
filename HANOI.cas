MAIN	START
	LD	GR0,N
	LD	GR1,A
	LD	GR2,B
	LD	GR3,C
	CALL	HANOI
	RET
HANOI	CPA	GR0,=1
	JZE	DISP
	SUBA	GR0,=1
	PUSH	0,GR2
	LD	GR2,GR3
	POP	GR3
	CALL	HANOI
	ST	GR1,MSG1
	ST	GR2,MSG2
	OUT	MSG,LNG
	PUSH	0,GR2
	LD	GR2,GR1
	LD	GR1,GR3
	POP	GR3
	CALL	HANOI
	PUSH	0,GR2
	LD	GR2,GR1
	POP	GR1
	ADDA	GR0,=1
	RET
DISP	ST	GR1,MSG1
	ST	GR3,MSG2
	OUT	MSG,LNG
	RET	
N	DC	3
LNG	DC	44
A	DC	'A'
B	DC	'B'
C	DC	'C'
MSG	DC	''
MSG1	DS	1
	DC	'=>'
MSG2	DS	1
	END
